# MSK HA Cluster Configuration Example
# Copy this file to terraform.tfvars and update values

# AWS Region
region = "ap-northeast-2"

# Cluster Name
cluster_name = "msk-ha-cluster"

# EC2 Key Pair (생성 방법: aws ec2 create-key-pair --key-name msk-key)
key_pair_name = "msk-key"

# SSH/Grafana 접근 허용 IP (본인 IP로 변경)
# 현재 IP 확인: curl https://checkip.amazonaws.com
allowed_cidr_blocks = ["1.2.3.4/32"]

# Grafana Admin User ID (Optional)
# AWS SSO User ID를 입력하면 자동으로 Admin 권한이 부여됩니다
# 확인 방법: AWS IAM Identity Center 콘솔에서 사용자 정보 확인
# 예: "c4f8b488-4081-703e-da8f-5cfc374d0e05"
# 비워두면 수동으로 Grafana에서 권한 설정 필요
grafana_admin_user_id = ""

# MSK Configuration
kafka_version = "3.6.0"
broker_instance_type = "kafka.m5.large"  # Standard broker
ebs_volume_size = 100

# Network
vpc_cidr = "10.0.0.0/16"

# Tags
tags = {
  Environment = "production"
  Project     = "msk-ha-cluster"
}
